<%= form_for(@document) do |f| %>
  <% if @document.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@document.errors.count, "error") %> prohibited this document from being saved:</h2>

      <ul>
      <% @document.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <form role="form">

  <div class="form-group">
    <%= f.label :city, 'What city?' %>
    <%= f.text_field :city, class:'form-control', placeholder:'NYC, Seattle, Boston' %>
  </div>

  <div class="form-group">
    <%= f.label :job, 'Who is it for?' %>
    <%= f.text_field :city, class:'form-control', placeholder:'PMs? Writers? Developers?'%>
  </div>

  <div class="form-group">
    <%= f.label :title, 'Document Title' %>
    <%= f.text_field :title, class:'form-control', placeholder:'Make it good! The title is what convines someone to read the document.' %>
  </div>

  <div class="form-group">
    <%= f.label :url, 'Direct Document URL' %>
    <%= f.text_field :url, class:'form-control', placeholder:'Any URL where the content lives is fine - personal blog entry, viewable Google doc, etc.' %>
  </div>

  <div class="form-group">
    <%= label :author, :email_address, "What's your email address?"%>
    <%= text_field :author, :email_address, class:'form-control' %>
  </div>

  <div class="form-group">
    <%= label :author, :bio, "About you" %>
    <%= text_field :author, :bio, class:'form-control', placeholder:'About you in one line.' %>
  </div>

<% if @isadmin then %>

  <div class="form-group">
    <%= f.label :approved %>
    <%= f.check_box :approved %>
  </div>

<% end %>

<button type="submit" class="btn btn-success"> Submit </button>

<% end %>